<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textview_offertext"
            style="@style/commonH2TextViewStyle"
            android:layout_width="0dp"
            android:layout_gravity="top"
            android:layout_weight="5"
            android:maxLines="3"
            android:text="@string/text_dummytext"/>
        
        <TextView
            android:id="@+id/textview_votesup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableTop="@drawable/ic_rating_good"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/items_horizontal_padding"
            android:paddingRight="@dimen/items_horizontal_padding"
            android:paddingTop="@dimen/items_vertical_padding"
            android:text="0"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="serif" />
        
        <TextView
            android:id="@+id/textview_votesdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableTop="@drawable/ic_rating_bad"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/items_horizontal_padding"
            android:paddingTop="@dimen/items_vertical_padding"
            android:text="0"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="serif" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview_brandstore"
        style="@style/commonH3TextViewStyle"
        android:drawableLeft="@drawable/ic_cart_small"
        android:text="@string/text_dummytext" />

    <TextView
        android:id="@+id/textview_locations"
        style="@style/commonH3TextViewStyle"
        android:drawableLeft="@drawable/ic_location_small"
        android:text="@string/text_dummytext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_background_color" >

        <TextView
            android:id="@+id/textview_views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_offeritem_views"
            android:textColor="@color/background_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textview_reviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_offeritem_reviews"
            android:textColor="@color/background_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="sans" />

    </LinearLayout>

</LinearLayout>
