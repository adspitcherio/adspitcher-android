<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageview_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_img"
            android:src="@drawable/ic_default_image" />

        <TextView
            android:id="@+id/textview_offertext"
            style="@style/commonH2TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="top"
            android:maxLines="3"
            android:text="@string/text_dummytext"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/textview_calendar"
        style="@style/commonH3TextViewStyle"
        android:drawableLeft="@drawable/ic_calendar_small"
        android:text="@string/text_dummytext" />

    <TextView
        android:id="@+id/textview_brandstore"
        style="@style/commonH3TextViewStyle"
        android:drawableLeft="@drawable/ic_cart_small"
        android:text="@string/text_dummytext" />

    <TextView
        android:id="@+id/textview_locations"
        style="@style/commonH3TextViewStyle"
        android:drawableLeft="@drawable/ic_location_small"
        android:text="@string/text_dummytext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_background_color" >

        <TextView
            android:id="@+id/textview_views"
            style="@style/commonlistitemtextStyle"
            android:drawableLeft="@drawable/ic_views"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textview_reviews"
            style="@style/commonlistitemtextStyle"
            android:drawableLeft="@drawable/ic_comments"
            android:layout_weight="1" />
        
        <TextView
            android:id="@+id/textview_votesup"
            style="@style/commonlistitemtextStyle"
            android:drawableLeft="@drawable/ic_rating_good"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/textview_votesdown"
            style="@style/commonlistitemtextStyle"
            android:drawableLeft="@drawable/ic_rating_bad"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
