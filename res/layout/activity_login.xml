<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableRight="@drawable/ic_social_person"
        android:ems="10"
        android:hint="@string/text_username"
        android:inputType="none"
        android:textColor="@color/heading_text_color"
        android:textColorHint="@color/hint_text_color"
        android:typeface="serif" >

    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableRight="@drawable/ic_device_access_accounts"
        android:ems="10"
        android:hint="@string/text_password"
        android:inputType="textPassword"
        android:textColor="@color/heading_text_color"
        android:textColorHint="@color/hint_text_color"
        android:typeface="serif" >

    </EditText>

    <CheckBox
        android:id="@+id/checkbox_rememberme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/items_vertical_margin"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:text="@string/text_rememberme"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" />
    
    <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:drawableRight="@drawable/ic_navigation_next_item_white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingLeft="@dimen/text_border_horizontal_padding"
            android:paddingRight="@dimen/text_border_horizontal_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_signin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/heading_text_color"
            android:typeface="serif" />
    
    <TextView
            android:id="@+id/btn_forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:drawableRight="@drawable/ic_navigation_next_item_white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingLeft="@dimen/text_border_horizontal_padding"
            android:paddingRight="@dimen/text_border_horizontal_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_forgotpwd"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/heading_text_color"
            android:typeface="serif" />

</LinearLayout>
