<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_postedby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_social_person"
        android:gravity="center_vertical"
        android:text="@string/text_offertext"
        android:textColor="@color/heading_text_color"
        android:textSize="@dimen/offers_text_font_size"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textview_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:gravity="center_vertical"
        android:text="@string/text_offertext"
        android:textColor="@color/heading_text_color"
        android:textSize="@dimen/offers_text_font_size"
        android:typeface="sans" />
    
    <TextView
        android:id="@+id/textview_postedtimeago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_clock"
        android:gravity="center_vertical"
        android:text="@string/text_offertext"
        android:textColor="@color/heading_text_color"
        android:textSize="@dimen/offers_text_font_size"
        android:textStyle="italic"
        android:typeface="sans" />

</LinearLayout>
