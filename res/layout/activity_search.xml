<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/edittext_searchoffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableRight="@drawable/ic_action_search"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" >

            <requestFocus />
        </EditText>
        
    <TextView
            android:id="@+id/textview_search_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/text_border_horizontal_padding"
            android:paddingRight="@dimen/text_border_horizontal_padding"
            android:paddingTop="@dimen/items_vertical_padding"
            android:text="@string/txt_searchresults"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue_background_color"
            android:textStyle="bold"
            android:typeface="serif" />

    <ListView
        android:id="@+id/listview_searchoffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" >

    </ListView>

</LinearLayout>
